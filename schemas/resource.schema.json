{
  "$id": "https://gbv.github.io/jskos/resource.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSKOS Resource",
  "description": "all kinds of entities",
  "type": "object",
  "$defs": {
    "url": {
      "type": "string",
      "format": "iri-reference",
      "pattern": "^https?://"
    },
    "uri": {
      "$comment": "workaround for https://github.com/luzlab/ajv-formats-draft2019/issues/16",
      "anyOf": [
        {
          "type": "string",
          "format": "iri-reference",
          "pattern": "^[a-z]+:"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "link-template": {
      "type": "string",
      "$comment": "Level 2 URI Template",
      "pattern": "^([^\\x00-\\x20\\x7f\"'%<>\\\\^`{|}]|%[0-9A-Fa-f]{2}|\\{[+#]?(\\w|%[0-9A-Fa-f]{2})(\\.?(\\w|%[0-9A-Fa-f]{2}))*\\})*$"
    },
    "type": {
      "description": "URIs of types",
      "type": "array",
      "items": {
        "$ref": "#/$defs/uri"
      }
    },
    "non-negative-integer": {
      "type": "integer",
      "minimum": 0
    },
    "percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "date": {
      "anyOf": [
         {
           "type": "string",
           "format": "date"
         },
         {
           "type": "string",
           "format": "date-time"
         },
         {
           "type": "string",
           "pattern": "^-?\\d{4}-[01]\\d-[0123]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d$"
        },
        {
          "type": "string",
          "pattern": "^-?\\d{4}(-[01]\\d)?$"
        }
      ]
    },
    "list": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "null"
          },
          {
            "type": "string"
          }
        ]
      }
    },
    "edtf": {
      "$comment": "EDTF Level 1",
      "anyOf": [
        {
          "type": "string",
          "pattern": "^Y?-?[0-9X]{4,}[?~%]?(-[012X][0-9X][?~%]?(-[0-3X][0-9X][?~%]?)?)?$",
          "$comment": "EDTF Year, Year-Month, Year-Month-Day"
        },
        {
          "type": "string",
          "pattern": "^Y?-?[0-9X?~%-]{4,}T[0-9?~%:.]+(Z|[+-][0-9?~%:]+)?$",
          "$comment": "EDTF Date and Time"
        },
        {
          "type": "string",
          "pattern": "^(|\\.\\.|[0-9TXYZ%~?.+-]+)/(|\\.\\.|[0-9TXYZ%~?.+-]+)$",
          "$comment": "EDTF Interval (very lax)"
        }
      ]
    },
    "rank": {
      "type": "string",
      "enum": ["normal","preferred","deprecated"],
      "default": "normal"
    },
    "qualifiedValue": {
      "type": "object",
      "properties": {
        "startDate": {
          "description": "date when the statement started to be valid",
          "$ref": "#/$defs/edtf"
        },
        "endDate": {
          "description": "date when the statement ended to be valid",
          "$ref": "#/$defs/edtf"
        },
        "source": {
          "description": "sources as evidence for the statement",
          "$ref": "concept.schema.json#/$defs/conceptSet"
        },
        "rank": {
          "$ref": "#/$defs/rank"
        }
      }
    }
  },
  "properties": {
    "@context": {
      "description": "reference to a JSON-LD context document",
      "anyOf": [
        {
          "type": "string",
          "format": "iri",
          "default": "https://gbv.github.io/jskos/context.json"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/properties/@context/anyOf/0" 
          }
        }
      ]
    },
    "uri": {
      "description": "primary globally unique identifier",
      "$ref": "#/$defs/uri"
    },
    "identifier": {
      "description": "additional identifiers",
      "$ref": "#/$defs/list"
    },
    "type": {
      "$ref": "#/$defs/type"
    },
    "created": {
      "description": "date of creation",
      "$ref": "#/$defs/date"
    },
    "issued": {
      "description": "date of publication",
      "$ref": "#/$defs/date"
    },
    "modified": {
      "description": "date of last modification",
      "$ref": "#/$defs/date"
    },
    "creator": {
      "description": "agent primarily responsible for creation of resource",
      "$ref": "concept.schema.json#/$defs/conceptSet"
    },
    "contributor": {
      "description": "agent responsible for making contributions to the resource",
      "$ref": "concept.schema.json#/$defs/conceptSet"
    },
    "publisher": {
      "description": "agent responsible for making the resource available",
      "$ref": "concept.schema.json#/$defs/conceptSet"
    },
    "partOf": {
      "description": "resources which this resource is part of (if no other field applies)",
      "$ref": "concept.schema.json#/$defs/conceptSet"
    },
    "annotations": {
      "type": "array",
      "items": {
        "$ref": "annotation.schema.json"
      }
    },
    "rank": {
      "$ref": "#/$defs/rank"
    },
    "qualifiedRelations": {
      "type": "object",
      "propertyNames": { "$ref": "#/$defs/uri" },
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/qualifiedValue" } ],
            "properties": {
              "resource": {
                "description": "object of the relation",
                "$ref": "#"
              }
            },
            "patternProperties": { "^_|^[A-Z0-9]+$": {} },
            "unevaluatedProperties": false
          }
        }
      }
    },
    "qualifiedDates": {
      "type": "object",
      "propertyNames": { "$ref": "#/$defs/uri" },
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/qualifiedValue" } ],
            "properties": {
              "date": {
                "$ref": "#/$defs/edtf"
              }
            },
            "patternProperties": { "^_|^[A-Z0-9]+$": {} },
            "unevaluatedProperties": false
          }
        }
      }
    },
    "qualifiedLiterals": {
      "type": "object",
      "propertyNames": { "$ref": "#/$defs/uri" },
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [
              { "$ref": "#/$defs/qualifiedValue" }
            ],
            "properties": {
              "type": { "$ref": "#/$defs/type" },
              "literal": {
                "type": "object",
                "properties": {
                  "string": { "type": "string" },
                  "language": { "$ref": "item.schema.json#/$defs/language-tag" }
                },
                "required": [ "string" ],
                "additionalProperties": false
              }
            },
            "patternProperties": { "^_|^[A-Z0-9]+$": {} },
            "unevaluatedProperties": false
          }
        }
      }
    }
  },
  "patternProperties": { "^_|^[A-Z0-9]+$": {} }
}
