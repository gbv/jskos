{
  "$id": "https://gbv.github.io/jskos/service.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSKOS Service",
  "description": "A service to read and/or write data (in most cases an web service with API)",
  "type": "object",
  "allOf": [
    {
      "$ref": "item.schema.json"
    }
  ],
  "properties": {
    "api": {
      "description": "API type",
      "$ref": "resource.schema.json#/$defs/uri"
    },
    "endpoint": {
      "description": "API endpoint",
      "$ref": "resource.schema.json#/$defs/uri"
    },
    "serves": {
      "description": "Specific versions of datasets served via this API",
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "null" },
          { "$ref": "dataset.schema.json" }
        ]
      }
    }
  }
}
